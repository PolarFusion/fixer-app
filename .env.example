# ===== BACKEND КОНФИГУРАЦИЯ =====

# База данных SQLite
DATABASE_URL=sqlite:///./tickets.db

# JWT секретный ключ (ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ В ПРОДАКШЕНЕ!)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Алгоритм шифрования JWT
ALGORITHM=HS256

# Время жизни JWT токена (в минутах)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Окружение (development/production)
ENVIRONMENT=development

# ===== FRONTEND КОНФИГУРАЦИЯ =====

# URL API для фронтенда
VITE_API_URL=http://localhost:8000

# WebSocket URL
VITE_WS_URL=ws://localhost:8000

# ===== DOCKER КОНФИГУРАЦИЯ =====

# Порт для Nginx
NGINX_PORT=80

# Порт для HTTPS (если используется SSL)
NGINX_SSL_PORT=443

# ===== ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ =====

# Максимальный размер загружаемого файла (в байтах)
MAX_FILE_SIZE=10485760

# Директория для медиа файлов
MEDIA_DIR=media

# Количество дней для хранения старых заявок
RETENTION_DAYS=90

# Время запуска автоочистки (в формате cron)
CLEANUP_TIME=02:00

# ===== НАСТРОЙКИ ЛОГИРОВАНИЯ =====

# Уровень логирования (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# ===== НАСТРОЙКИ БЕЗОПАСНОСТИ =====

# Разрешенные origins для CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Домен для cookies (оставьте пустым для localhost)
COOKIE_DOMAIN=

# Использовать HTTPS для cookies (true/false)
SECURE_COOKIES=false